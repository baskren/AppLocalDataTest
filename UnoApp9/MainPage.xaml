<Page x:Class="UnoApp9.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:UnoApp9"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
  <ScrollViewer>
    <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Button HorizontalAlignment="Left" Content="FONT RESOURCE TEST" Click="Button_Click"/>
            <Button HorizontalAlignment="Right" Content="HTML RESOURCE TEST" Click="Html_Button_Click"/>
            <TextBlock  Grid.Row="1"  AutomationProperties.AutomationId="HelloTextBlock" x:Name="HelloTextBlock"
                  Text="Hello Uno Platform!"
                  HorizontalAlignment="Center" />
            <WebView2 Grid.Row="1" x:Name="WebView"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"
                  />
        </Grid>
  </ScrollViewer>
</Page>
